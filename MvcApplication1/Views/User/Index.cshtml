@model IEnumerable<CapaModelo.User>

@{
    ViewBag.Title = "Index";
}

<h2>Listado de Usuarios</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table style="align-content:center">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PK_user)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.username)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.firstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.lastName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PK_user)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.username)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.firstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.lastName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.PK_user }) |
            @Html.ActionLink("Details", "Details", new { id=item.PK_user  }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.PK_user  })
        </td>
    </tr>
}

</table>
