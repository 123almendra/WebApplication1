@model MvcApplication1.Models.ListPeriodico

@{
    ViewBag.Title = "Grid";
}

@{ 
    <head>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    </head>
}

<center>
    <div class="panel-body col-sm-3">
    </div>
    <div class="panel-body col-sm-6">
        <div id="divGridPagina" class="table-responsive">
            @Html.Hidden("items_count", Model.Elementos.Count())
            <table class="table table-striped table-condensed text-center">
                <tr>
                    <th class="text-center col-sm-2">
                        <a class="punteroMouse">Id Documento</a>
                    </th>
                    <th class="text-center col-sm-2">
                        <a class="punteroMouse">Id Categoria</a>
                    </th>
                    <th class="text-center col-sm-2">
                        <a class="punteroMouse">Categoria</a>
                    </th>
                    <th class="text-center col-sm-2">
                        <a class="punteroMouse">Date Include</a>
                    </th>
                </tr>

                @for (var i = 0; i < Model.Elementos.Count(); i++)
            {
                var item = Model.Elementos.ToList()[i];
                    <tr>
                        <td class="text-center col-sm-1">@item.Pk_Doc</td>
                        <td class="text-center col-sm-2">@item.Fk_Cat</td>
                        <td class="text-center col-sm-2">@item.Categoria</td>
                        <td class="text-center col-sm-1">@item.dateInclude</td>
                    </tr>
                }
            </table>


        </div>
    </div>
    <div class="panel-body col-sm-3">
    </div>
    <div id="pager" style="position:unset;">
        <form>
            <img src="@Url.Content("~/Content/images/first.png")" class="first" />
            <img src="@Url.Content("~/Content/images/prev.png")" class="prev" />
            <input type="text" class="pagedisplay" />
            <img src="@Url.Content("~/Content/images/next.png")" class="next" />
            <img src="@Url.Content("~/Content/images/last.png")" class="last" />
            <select class="pagesize">
                <option selected="selected" value="5">5</option>
                <option value="10">10</option>
                <option value="20">20</option>
                <option value="30">30</option>
                <option value="40">40</option>
            </select>
        </form>
    </div>
</center>