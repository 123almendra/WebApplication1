@model WebAppProyecto.Models.Periodico.ListPeriodico
@{
    ViewBag.Title = "Grid";
    Layout = "";
}

@{
    <head>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    </head>
}

<center>
    <div class="panel-body col-sm-12">
        <div id="divGridPagina" class="table-responsive">
            @Html.Hidden("items_count", Model.Elementos.Count())
            <table class="table table-striped table-condensed text-center">
                <tr>
                    <th class="text-center col-sm-2">
                        <a class="punteroMouse">Id Documento</a>
                    </th>
                    <th class="text-center col-sm-2">
                        <a class="punteroMouse">Id Categoria</a>
                    </th>
                    <th class="text-center col-sm-2">
                        <a class="punteroMouse">Categoria</a>
                    </th>
                    <th class="text-center col-sm-2">
                        <a class="punteroMouse">Date Include</a>
                    </th>
                </tr>

                @for (var i = 0; i < Model.Elementos.Count(); i++)
                    {
                    var item = Model.Elementos.ToList()[i];
                        <tr>
                            <td class="text-center col-sm-1">@item.Pk_Doc</td>
                            <td class="text-center col-sm-2">@item.Fk_Cat</td>
                            <td class="text-center col-sm-2">@item.Categoria</td>

                            <td class="text-center col-sm-1">@item.dateInclude</td>
                        </tr>
                    }
            </table>
        </div>
        <div id="pager">            
               <ul class="pagination">
                   <li>@Ajax.ActionLink("Primero", "Grid2", new { id = 1}, new AjaxOptions { UpdateTargetId = "divGrid", InsertionMode = InsertionMode.Replace})</li>
                   <li>@Ajax.ActionLink("Anterior", "Grid2", new { id = (ViewBag.PageIndex - 1 < 1) ? 1 : (ViewBag.PageIndex - 1) }, new AjaxOptions { UpdateTargetId = "divGrid", InsertionMode = InsertionMode.Replace})</li>
                   <li><span>Pág. @ViewBag.PageIndex de @ViewBag.PageCount </span></li>
                   <li>@Ajax.ActionLink("Siguiente", "Grid2", new { id = (ViewBag.PageIndex + 1 > ViewBag.PageCount) ? ViewBag.PageCount : (ViewBag.PageIndex + 1) }, new AjaxOptions { UpdateTargetId = "divGrid", InsertionMode = InsertionMode.Replace })</li>
                   <li>@Ajax.ActionLink("Último", "Grid2", new { id = ViewBag.PageCount}, new AjaxOptions { UpdateTargetId = "divGrid", InsertionMode = InsertionMode.Replace })</li>
               </ul>
            
        </div>
    </div>
    
    
</center>
